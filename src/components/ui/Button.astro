---
export interface Props {
  href: string;
  label: string;
  color?: 'violet' | 'cyan'; 
}

const { href, label, color = 'violet' } = Astro.props;

const base = 'inline-block m-6 px-6 py-3 bg-cyan-600 text-white rounded-xl shadow transition';

const style = color === 'violet'
  ? 'bg-violet-500 hover:bg-violet-600'
  : 'bg-cyan-600 hover:bg-cyan-700';
---

<a href={href} class={`${base} ${style}`}>
  {label}
</a>
